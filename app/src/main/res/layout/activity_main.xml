<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.klauskpm.thatsnewstome.MainActivity">

    <SearchView
        android:id="@+id/news_search"
        style="@style/NewsSearch" />

    <ListView
        android:id="@+id/list"
        android:layout_below="@id/news_search"
        style="@style/NewsList" />

    <TextView
        android:id="@+id/warning_message"
        android:text="@string/search_topic"
        style="@style/WarningMessages" />

    <ProgressBar
        android:id="@+id/spinner_loader"
        style="@style/Base.Widget.AppCompat.ProgressBar.News" />
</RelativeLayout>
